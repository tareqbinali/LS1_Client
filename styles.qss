/* QScrollArea - Dark scroll area with visible border */
QScrollArea {
    background-color: #1E1E1E;  /* Dark background */
    border: 2px solid #3B82F6;  /* Blue border for visibility */
    border-radius: 6px;  /* Optional: Rounded corners */
    padding: 5px;  /* Add spacing inside the border */
}

/* QRadioButton - Neatly styled radio buttons */
QRadioButton {
    color: #E0E0E0;
    padding: 5px;
}

QRadioButton::indicator {
    border: 2px solid #3B82F6;
    border-radius: 6px;
    width: 18px;
    height: 18px;
}

QRadioButton::indicator:checked {
    background-color: #4A90E2;
}

/* QStackedLayout - Tab-like transitions (Optional, add if using) */
QStackedLayout {
    background-color: #2E2E2E;
    border: none;
}

/* QGraphicsView - For custom views like images */
QGraphicsView {
    background-color: #2B2B2B;
    border: 1px solid #444444;
}

/* QCalendarWidget - Light calendar with dark theme */
QCalendarWidget {
    background-color:rgb(46, 46, 46);
    color: #E0E0E0;
    border: 1px solid #3B82F6;
}

QCalendarWidget QAbstractItemView {
    background-color:rgb(29, 202, 179);
    border: none;
}

QCalendarWidget QAbstractItemView::item:selected {
    background-color:rgba(74, 145, 226, 0.25);
    color: black;
}

/* Style the menu bar */
QMenuBar {
    background-color: #0078d7;  /* A deep blue color */
    color: white;  /* Text color */
    font-size: 14px;
}

/* Style menu bar items */
QMenuBar::item {
    background-color: transparent;
    color: white;
    padding: 5px 10px;
}
QMenuBar::item:disabled {
    background-color: #d3d3d3;  /* Gray background */
    color: #a9a9a9;             /* Gray text */
}

/* Highlight when hovered */
QMenuBar::item:selected {
    background-color: #005a9e;  /* Slightly darker blue */
}

/* Style dropdown menus */
QMenu {
    background-color: #0078d7;
    border: 1px solid #005a9e;
    color: white;
}

/* Style menu items */
QMenu::item {
    background-color: transparent;
    padding: 5px 20px;
}
QMenu::item:disabled {
    background-color: #d3d3d3;  /* Gray background */
    color: #a9a9a9;             /* Gray text */
}

/* Highlight menu items when hovered */
QMenu::item:selected {
    background-color: #005a9e;
}


/* Base style for the progress bar */
QProgressBar {
    border: 2px solid #3B82F6; /* Blue border */
    border-radius: 5px; /* Rounded corners */
    background-color: #222222; /* Dark background */
    text-align: center; /* Center the percentage text */
    color: red; /* Text color */
    height: 15px; /* Adjust height */
}

/* The actual progress indicator */
QProgressBar::chunk {
    background-color:rgb(59, 246, 106); /* Blue progress color */
    width: 10px; /* Chunk width for smooth animation */
    /* border-radius: 5px;  Rounded corners for progress */
}


/* QToolBar mainly to hid the vertical line created by the seperator */
QToolBar::separator {
    width: 10px;  /* Make it have no width */
    background: transparent;  /* Set the background to transparent */
    border: none;  /* Remove any borders */
}