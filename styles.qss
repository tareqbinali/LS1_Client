/* QPushButton - Modern, sleek buttons */
/* Default Button Style - 3D effect */
QPushButton {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                                stop:0 #B0E0E6, stop:1 #87CEEB); /* Skyblue gradient */
    color: black;
    border: 2px solid #1E3A8A;
    border-radius: 8px;
    padding: 8px 12px;
    font-size: 14px;
    font-weight: bold;
    text-align: center;
    

    /* Button size */
    width: 70px;      /* Fixed width */
    height: 18px;      /* Fixed height */

}

/* Hover effect - Slightly brighter */
QPushButton:hover {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                                stop:0 #ADD8E6, stop:1 #87CEFA); /* Lighter sky blue */
    border: 2px solid #102C6B; /* Slightly darker border */
}

/* Pressed Effect - Simulated Depth */
QPushButton:pressed {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, 
                                stop:0 #1565C0, stop:1 #0D47A1);  /* Darker blue on press */
    border: 2px solid #0D47A1;
    padding-top: 10px; /* Moves text down slightly */
    padding-bottom: 6px;
}

/* Disabled button style */
QPushButton:disabled {
    background: #A9A9A9;
    color: #666666;
    border: 2px solid #666666;
}



/* QTextEdit - For text input with focus effect */
QTextEdit, QLineEdit {
    background-color:rgb(162, 235, 25);
    color:rgb(22, 21, 21);
    border: 1px solid #3B82F6;
    border-radius: 5px;
    padding: 5px;
}

QTextEdit:focus, QLineEdit:focus {
    border: 1px solid #4A90E2;
    background-color:rgb(102, 255, 0);
}


/* QTablewidget*/
QTableWidget {
    background-color: black;  /* Default background */
    color: white;
    border: 1px solid #3B82F6;
    alternate-background-color: #444444;  /* Dark gray for alternate rows */
}

QTableWidget::item {
    background-color: #888888;  /* Light gray for default rows */
    color: black;
}

/* Alternate row color */
QTableWidget::item:alternate {
    background-color: #444444;  /* Dark gray */
    color: white;
}

/* Selected item */
QTableWidget::item:selected {
    background-color: #4A90E2;
    color: white;
}

/* Header styling */
QTableWidget QHeaderView::section {
    background-color: #222222;
    color: white;
    padding: 5px;
    border: 1px solid rgb(0,100,0);
    font-weight: bold;
}




/* QListWidget - List view with highlighted selected item */
QListWidget {
    background-color: #1E1E1E;
    color: #E0E0E0;
    border: 1px solid #3B82F6;
}

QListWidget::item:selected {
    background-color: #4A90E2;
    color: white;
}

/* QGroupBox - Stylish group boxes with blue borders */
QGroupBox {
    background-color:rgb(0, 100, 0); 
    color:white; 
    font-size:18px; 
    font-weight:bold; 
    border:2px solid rgb(56, 97, 125); 
    border-radius: 2px;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 rgb(58, 149, 177), stop: 1 rgb(100, 36, 36));
}

QGroupBox:title {
    color: #E0E0E0;
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 0 5px;
    font-weight: bold;
}

/* QComboBox - Stylish dropdown with blue highlight */
QComboBox {
    background-color: #2E2E2E;
    color: #E0E0E0;
    border: 1px solid #3B82F6;
    border-radius: 5px;
    padding: 5px;
}

QComboBox:editable {
    background-color: #333333;
}

QComboBox:hover {
    border-color: #4A90E2;
}

